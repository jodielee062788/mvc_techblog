<div class="postMainBox container d-flex flex-column justify-content-center align-items-center">
    <div class="row">
        <div class="postDetails col text-center">
            <h1 class="fw-bold">{{ title }}</h1>
            <p class="fw-bold">Posted by: {{ user.username }}</p>
            <p class="text-justify mt-4">{{ description }}</p>
            <p class="date text-end mt-4 mb-2">Date: {{{ format_date createdAt }}}</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h4 class="mt-4 fw-bold">Comments</h4>
            <ul class="list-group comment-list">
                {{#each comments}}
                    <li class="list-group-item">{{ this.description }} - {{ this.user.username }}</li>
                {{/each}}
            </ul>

            <!-- Form to add a new comment -->
            <form id="comment-form" class="mt-2">
                <div class="mb-3">
                    <textarea id="comment-text" class="form-control" rows="3" placeholder="Add your comment"></textarea>
                </div>
                <button type="submit" class="btn btn-dark fw-bold mx-auto">POST COMMENT</button>
            </form>
        </div>
    </div>
</div>


<!-- Include any necessary JavaScript files -->
<script src="./js/dashboard.js"></script>
<script src="./js/comment.js"></script>

